<svg width="800" height="600" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1a1a1a;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#0a0a0a;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="cardGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#2a2a2a;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#1a1a1a;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="accentGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#F58427;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#C85A00;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="800" height="600" fill="url(#bgGradient)"/>
  
  <!-- Main Platform Interface -->
  <rect x="100" y="100" width="600" height="400" fill="url(#cardGradient)" rx="20" stroke="#333" stroke-width="2"/>
  
  <!-- Header Bar -->
  <rect x="120" y="120" width="560" height="60" fill="#333" rx="10"/>
  <circle cx="150" cy="150" r="15" fill="url(#accentGradient)"/>
  <text x="150" y="156" font-family="Arial, sans-serif" font-size="16" font-weight="bold" text-anchor="middle" fill="#ffffff">H</text>
  <text x="180" y="155" font-family="Arial, sans-serif" font-size="20" font-weight="bold" fill="#ffffff">Hiyero</text>
  
  <!-- Navigation -->
  <rect x="400" y="135" width="80" height="30" fill="#555" rx="5"/>
  <text x="440" y="155" font-family="Arial, sans-serif" font-size="12" text-anchor="middle" fill="#ffffff">Home</text>
  <rect x="490" y="135" width="80" height="30" fill="#555" rx="5"/>
  <text x="530" y="155" font-family="Arial, sans-serif" font-size="12" text-anchor="middle" fill="#ffffff">Profile</text>
  <rect x="580" y="135" width="80" height="30" fill="#555" rx="5"/>
  <text x="620" y="155" font-family="Arial, sans-serif" font-size="12" text-anchor="middle" fill="#ffffff">Settings</text>
  
  <!-- Content Area -->
  <rect x="140" y="200" width="240" height="280" fill="#222" rx="10"/>
  <rect x="400" y="200" width="240" height="280" fill="#222" rx="10"/>
  
  <!-- Left Panel - User Preferences -->
  <text x="260" y="225" font-family="Arial, sans-serif" font-size="16" font-weight="bold" text-anchor="middle" fill="#ffffff">Personalization</text>
  <rect x="160" y="240" width="200" height="40" fill="#333" rx="5"/>
  <text x="260" y="265" font-family="Arial, sans-serif" font-size="12" text-anchor="middle" fill="#cccccc">Theme: Dark Mode</text>
  <rect x="160" y="290" width="200" height="40" fill="#333" rx="5"/>
  <text x="260" y="315" font-family="Arial, sans-serif" font-size="12" text-anchor="middle" fill="#cccccc">Layout: Compact</text>
  <rect x="160" y="340" width="200" height="40" fill="#333" rx="5"/>
  <text x="260" y="365" font-family="Arial, sans-serif" font-size="12" text-anchor="middle" fill="#cccccc">Language: English</text>
  <rect x="160" y="390" width="200" height="40" fill="#333" rx="5"/>
  <text x="260" y="415" font-family="Arial, sans-serif" font-size="12" text-anchor="middle" fill="#cccccc">Notifications: On</text>
  <rect x="160" y="440" width="200" height="30" fill="url(#accentGradient)" rx="5"/>
  <text x="260" y="460" font-family="Arial, sans-serif" font-size="12" font-weight="bold" text-anchor="middle" fill="#ffffff">Save Preferences</text>
  
  <!-- Right Panel - Content -->
  <text x="520" y="225" font-family="Arial, sans-serif" font-size="16" font-weight="bold" text-anchor="middle" fill="#ffffff">Adaptive Content</text>
  <rect x="420" y="240" width="200" height="60" fill="#333" rx="5"/>
  <text x="520" y="260" font-family="Arial, sans-serif" font-size="12" font-weight="bold" text-anchor="middle" fill="#ffffff">Recommended for You</text>
  <text x="520" y="280" font-family="Arial, sans-serif" font-size="10" text-anchor="middle" fill="#cccccc">Based on your preferences</text>
  <rect x="420" y="310" width="200" height="60" fill="#333" rx="5"/>
  <text x="520" y="330" font-family="Arial, sans-serif" font-size="12" font-weight="bold" text-anchor="middle" fill="#ffffff">Recent Activity</text>
  <text x="520" y="350" font-family="Arial, sans-serif" font-size="10" text-anchor="middle" fill="#cccccc">Last updated 2 hours ago</text>
  <rect x="420" y="380" width="200" height="60" fill="#333" rx="5"/>
  <text x="520" y="400" font-family="Arial, sans-serif" font-size="12" font-weight="bold" text-anchor="middle" fill="#ffffff">Quick Actions</text>
  <text x="520" y="420" font-family="Arial, sans-serif" font-size="10" text-anchor="middle" fill="#cccccc">Frequently used features</text>
  
  <!-- Floating Elements -->
  <circle cx="200" cy="180" r="8" fill="url(#accentGradient)" opacity="0.8"/>
  <circle cx="600" cy="180" r="8" fill="url(#accentGradient)" opacity="0.8"/>
  <circle cx="400" cy="480" r="8" fill="url(#accentGradient)" opacity="0.8"/>
  
  <!-- Decorative Lines -->
  <line x1="100" y1="520" x2="700" y2="520" stroke="#333" stroke-width="2"/>
  <line x1="100" y1="540" x2="600" y2="540" stroke="#333" stroke-width="1"/>
</svg> 